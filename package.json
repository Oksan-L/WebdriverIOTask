{
  "name": "WebdriverIOTask",
  "type": "module",
  "devDependencies": {
    "@wdio/allure-reporter": "^9.20.0",
    "@wdio/cli": "^9.20.0",
    "@wdio/cucumber-framework": "^9.20.0",
    "@wdio/local-runner": "^9.20.0",
    "@wdio/spec-reporter": "^9.20.0",
    "cross-env": "^10.1.0"
  },
  "scripts": {
    "wdio": "wdio run ./wdio.conf.js",
    "test": "npx wdio run ./configs/wdio.conf.js",
    "test:chrome": "cross-env BROWSER=chrome npx wdio run ./configs/wdio.chrome.conf.js",
    "test:firefox": "cross-env BROWSER=firefox npx wdio run ./configs/wdio.firefox.conf.js",
    "test:headless": "cross-env HEADLESS=true npx wdio run ./configs/wdio.chrome.conf.js",
    "report:generate": "allure generate reports/allure-results --clean -o reports/allure-report",
    "report:open": "allure open reports/allure-report"
  }
}
